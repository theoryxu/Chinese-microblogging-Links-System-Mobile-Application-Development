package com.example.stxq;

import tool.network.EntityDisambiguationService;
import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.text.Editable;
import android.view.Menu;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class SecondActivity extends Activity {

	public EditText editText;
	public Button buttonPrevious;
	public Button buttonSearch;
	
	public EntityDisambiguationService entityDisambiguationService;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_second);
		
		editText = (EditText)findViewById(R.id.editText1);
		buttonPrevious = (Button)findViewById(R.id.button1);
		buttonSearch = (Button)findViewById(R.id.button2);
		
		buttonPrevious.setOnClickListener(new Button.OnClickListener(){

			@Override
			public void onClick(View arg0) {
				// TODO Auto-generated method stub
				Intent intent = new Intent(SecondActivity.this, MainActivity.class);
				startActivity(intent);
			}
			
		});
		
		buttonSearch.setOnClickListener(new Button.OnClickListener(){

			@Override
			public void onClick(View arg0) {
				// TODO Auto-generated method stub
				
				
				Editable text = editText.getText();
				entityDisambiguationService = getIntent().getParcelableExtra("EDS");
				entityDisambiguationService.setEntity(text.toString());
				
				Bundle mBundle = new Bundle(); 
				mBundle.putSerializable("EDS",entityDisambiguationService);
				
				Intent intent = new Intent(SecondActivity.this, ThirdActivity.class);
				intent.putExtra("mBundle", entityDisambiguationService);
				startActivity(intent);
			}
			
		});
        
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.second, menu);
		return true;
	}

}
